@using FakeStoreWebApp.ViewModels
<div class="card rounded-4 shadow">

    <div class="card-header rounded-top-4 text-bg-dark text-center">
        <h1 class="fw-normal">
            Bienvenido al portal de recaudos
        </h1>
    </div>


    <div class="card-body p-3 p-lg-4 text-black">
        <p class="fw-normal fs-5 mb-1 pb-2 text-body-secondary">
            Por favor ingrese los siguientes datos.
        </p>

        <EditForm Model="ViewModel!.Product" OnValidSubmit="(async () => await OnSubmit!())">
            <div class="form-outline mb-4">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-building-fill"></i>
                    </span>
                    <InputText class="form-control" placeholder="Código de empresa" @bind-Value="@ViewModel.Product!.Title"></InputText>
                </div>
            </div>
            <div class="form-outline mb-4">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="bi bi-building-fill"></i>
                    </span>
                        <CurrencyInput TValue="decimal" @bind-Value="@ViewModel.Price" Placeholder="Enter amount" />
                </div>
            </div>
            <div class="pt-1 mb-4 container">
                <div class="row">
                    <div class="col-auto me-auto px-0">
                        @if (!ViewModel.IsBusy)
                        {
                            <button type="submit" class="btn btn-dark">Iniciar sesión</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-dark" disabled>
                                <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                                <span role="status">Ingresando...</span>
                            </button>
                        }
                    </div>
                    <div class="col-auto ms-auto align-self-center px-0">
                        <a href="https://syscafe.com/politica-privacidad/" class="small text-body-secondary text-decoration-none" rel="noreferrer noopener">Política de privacidad.</a>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public ProductsViewModel? ViewModel { get; set; }

    [Parameter]
    public Func<Task>? OnSubmit { get; set; }
}
