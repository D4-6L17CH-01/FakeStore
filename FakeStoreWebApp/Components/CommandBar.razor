<div class="command-bar">
    <button class="btn btn-primary" @onclick="OnCreate">Agregar</button>
    <button class="btn btn-warning" @onclick="OnEdit" disabled="@IsEditDisabled">Editar</button>
    <button class="btn btn-danger" @onclick="OnDelete" disabled="@IsDeleteDisabled">Eliminar</button>
    <button class="btn btn-secondary" @onclick="OnRefresh">Actualizar</button>
</div>

@code {
    // Parámetros para definir si los botones están deshabilitados
    [Parameter]
    public bool IsEditDisabled { get; set; }

    [Parameter]
    public bool IsDeleteDisabled { get; set; }

    // Eventos que se disparan al hacer clic en cada acción
    [Parameter]
    public EventCallback OnCreate { get; set; }

    [Parameter]
    public EventCallback OnEdit { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

    [Parameter]
    public EventCallback OnRefresh { get; set; }
}
